# include <stdio.h> 
# include <conio.h> 
void main() 
{ 
 int rs, a ; 
 
 printf("Enter the amount in Rupees : ") ; 
 scanf("%d", &rs) ; 
 while(rs >= 500) 
 { 
  a = rs / 500 ; 
  rs = rs % 500;
  printf("\nThe no. of five hundreds are : %d", a) ; 
  break ; 
 } 
 while(rs >= 100) 
 { 
  a = rs / 100 ; 
  rs = rs % 100;
  printf("\n\nThe no. of hundreds are : %d", a) ; 
  break ; 
 } 
 while(rs >= 50) 
 { 
  a = rs / 50 ;
  rs = rs % 50; 
  printf("\n\nThe no. of fifties are : %d", a) ; 
  break ; 
 } 
 while(rs >= 20) 
 { 
  a = rs / 20 ; 
  rs = rs % 20;
  printf("\n\nThe no. of twenties are : %d", a) ; 
  break ; 
 } 
 while(rs >= 10) 
 { 
  a = rs / 10 ; 
  rs = rs % 10;
  printf("\n\nThe no. of tens are : %d", a) ; 
  break ; 
 } 
 while(rs >= 5) 
 { 
  a = rs / 5 ; 
  rs = rs % 5;
  printf("\n\nThe no. of fives are : %d", a) ; 
  break ; 
 } 
 while(rs >= 2) 
 { 
  a = rs / 2 ; 
  rs = rs % 2;
  printf("\n\nThe no. of Twos are : %d", a) ; 
  break ; 
 } 
 while(rs >= 1) 
 { 
  a = rs / 1 ; 
  rs = rs % 1;
  printf("\n\nThe no. of ones are : %d", a) ; 
  break ; 
 } 
 getch() ; 
}
